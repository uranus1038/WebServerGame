<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Login or Register Page</title>
  
</head>
<body>
    <div class="container p-5">
        <h1 class="text-center mb-5 text-uppercase text-muted">Beautiful world</h1>
        <div class="row">
            <div class="col-sm-5 bg-light rounded py-3">
                <h2 class ="text-center">Login</h2>
                <form action="" method="post">
                    <div class="form-group mt-2" >
                        <label for="_email">Email</label>
                        <input type="text" name = "user_email" id ="_email" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group mt-2" >
                        <label for="_password">Password</label>
                        <input type="password" name = "user_pass" id ="_pass" class="form-control" placeholder="Password" >
                    </div>
                    <% if(locals.login_error)
                    {
                        login_error.forEach(function(error_msg){ %>
                            <div class="alert alert-danger mt-3" role="alert"><%= error_msg %></div>
                        <%} )   
                    }%>
                
                    <button type="submit" class="btn btn-primary mt-2">Login</button>
                </form>

            </div>
            <div class="col-sm-6 bg-light rounded py-3 border offset-sm-1">
                <h2 class="text-center">Register</h2>
                <form action="/register" method="post" novalidate>
                    <div class="form-group mt-2">
                        <label for="_name">Name</label>
                        <input value="<%= (locals.old_data) ? old_data.user_name : ''  %>" type="text" name = "user_name" id ="_rname" class="form-control" placeholder="Name" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="_email">Email</label>
                        <input value="<%= (locals.old_data) ? old_data.user_email : ''  %>" type="email" name = "user_email" id ="_remail" class="form-control" placeholder="Email" required>
                    </div>

                    <div class="form-group mt-2">
                        <label for="_pass">Password</label>
                        <input type="password" name = "user_pass" id ="_rpass" class="form-control" placeholder="password" required>
                    </div>
                    <% if(locals.register_error)
                    {
                        register_error.forEach(function(error_msg){ %>
                            <div class="alert alert-danger mt-3" role="alert"><%= error_msg %></div>
                        <%} )   
                    }%>
                   
                  
                    <button type="submit" class="btn btn-success mt-2">Sign Up</button>
                </form>
            </div>

        </div>


    </div>
</body>
</html>